<server description="Game On! Room Service">

    <!-- Enable features -->
    <featureManager>
		<feature>websocket-1.1</feature>
	    <feature>localConnector-1.0</feature>
        <feature>jaxrs-2.0</feature>
        <feature>cdi-1.2</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint httpPort="9081" httpsPort="9444" id="defaultHttpEndpoint"/>

    <keyStore id="defaultKeyStore" password="testOnlyKeystore"/>

    <applicationMonitor updateTrigger="mbean"/>
	<logging traceSpecification="*=info"/>
    <webApplication contextRoot="/concierge" id="concierge-app" location="concierge-app.war"/>
</server>